for(int i=0; i<k; ++i)
for (int j=0; j<n; ++j)
     c[i] [j] =0;

//generamos la matris c.
 for (int=0; i<k; ++i)
    for (int j=0; j<=n; ++j)
    {
	
         for (int z=0; z<=m; ++z)
          C[i][j] += A[i][z] * B[z][j];
    }
return 0;
}

